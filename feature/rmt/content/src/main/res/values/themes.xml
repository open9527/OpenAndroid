<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ContentDayTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 窗口背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 应用的主要色调，ActionBar Toolbar 默认使用该颜色 -->
        <item name="colorPrimary">@android:color/white</item>
        <!-- 应用的主要暗色调，状态栏默认使用该颜色 -->
        <item name="colorPrimaryDark">@android:color/white</item>
        <!-- 应用的强调色，CheckBox RadioButton Switch 等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@android:color/black</item>
        <!-- 默认文本颜色，Button、TextView 的文字颜色-->
        <item name="android:textColor">@android:color/black</item>
        <!-- 默认提示颜色，Button、TextView 的提示文字颜色 -->
        <item name="android:textColorHint">@android:color/black</item>
        <!-- ActionMode 覆盖 Actionbar 不被顶下来 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- ActionMode 的颜色 -->
        <item name="actionModeBackground">@android:color/white</item>
        <!-- 解决 Android 5.1 及以上版本 Button 英文字符串自动变大写的问题 -->
        <item name="android:textAllCaps">false</item>
        <!-- 默认隐藏输入法，开启这个选项后会导致输入对话框在关闭之后不能关闭软键盘   -->
        <!--<item name="android:windowSoftInputMode">stateHidden</item>-->
        <!-- 关闭 RecyclerView ScrollView ViewPager 水波纹效果 -->
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">none</item>
        <!--状态栏颜色-->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <!--android 10暗黑模式-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>

        <item name="contentThemeColor">@color/content_main_theme_color</item>
        <item name="contentBgColor">@android:color/white</item>
        <item name="contentLineColor">@color/content_neutral_line_color</item>
        <item name="contentTitleColor">@color/content_neutral_black_color</item>
        <item name="contentSubTitleColor">@color/content_neutral_light_grey_color</item>

    </style>


